<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view= "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hàng hóa"
            android:id="@+id/loginText"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/green"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/mahh"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="Mã hàng hóa"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tenhh"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="Tên hàng hóa"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/motahh"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="Mô tả "
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/slhh"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_face_retouching_natural_24"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="Số lượng"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/dghh"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="Đơn giá"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_marginTop="10dp"
            android:inputType="number"/>

        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center">

            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/btthemhh"
                android:layout_gravity="center_horizontal"
                android:text="Thêm "
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/green"
                app:cornerRadius="20dp"
                android:drawableLeft="@drawable/baseline_note_add_24"/>

            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/btsuahh"
                android:text="Sửa "
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/green"
                app:cornerRadius="20dp"
                android:drawableLeft="@drawable/baseline_edit_note_24"/>

            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/btxoahh"
                android:text="Xóa "
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/green"
                app:cornerRadius="20dp"
                android:drawableLeft="@drawable/baseline_folder_delete_24"/>

            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/btlmhh"
                android:text="Làm mới"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/green"
                app:cornerRadius="20dp"
                android:drawableLeft="@drawable/baseline_refresh_24"/>

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvhh"/>
    </LinearLayout>
</LinearLayout>