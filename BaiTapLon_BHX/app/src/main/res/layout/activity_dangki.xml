<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view= "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login"
    tools:context=".activity.MainActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng Kí"
                android:id="@+id/loginText"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/green"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tendangki"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:hint="Nhập tên đăng kí"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/matkhau"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/padlock"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:hint="Nhập mật khẩu"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/hvt"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_face_retouching_natural_24"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:hint="Nhập Họ và Tên"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/sdt"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/call"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:hint="Nhập số điện thoại"
                android:textColor="@color/black"
                android:textColorHint="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btDangKi"
                android:text="Đăng Kí"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/green"
                app:cornerRadius = "20dp"
                android:drawableLeft="@drawable/register_button"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>