<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view= "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/anhcaidat"
    tools:context=".activity.MainActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý"
                android:id="@+id/loginText"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btTk"
                style="@android:style/Widget.Button"
                android:text="Tài khoản"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/green_banner"
                app:cornerRadius = "20dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:drawableTint="@color/white"
                android:paddingLeft="30dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btHH"
                android:text="Hàng hóa"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/green_banner"
                android:textColor="@color/white"
                app:cornerRadius = "20dp"
                android:drawableLeft="@drawable/hanghoa"
                android:drawableTint="@color/white"
                android:paddingLeft="30dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                style="@android:style/Widget.Button"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btLoaiHH"
                android:text="Loại hàng hóa"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/green_banner"
                app:cornerRadius = "20dp"
                android:drawableLeft="@drawable/loaihanghoa"
                android:drawableTint="@color/white"
                android:paddingLeft="30dp"
                />



            <androidx.appcompat.widget.AppCompatButton
                style="@android:style/Widget.Button"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btNCC"
                android:text="Nhà cung cấp"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/green_banner"
                app:cornerRadius = "20dp"
                android:drawableLeft="@drawable/user"
                android:drawableTint="@color/white"
                android:paddingLeft="30dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>