<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view= "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.MainActivity"
    android:background="@drawable/doimk">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:id="@+id/loginText"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/doitentk"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="Tên tài khoản"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/doimatkhautk"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/xacnhandoimk"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="Mật khẩu mới"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/mkmoi"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:hint="Nhâp lại mật khẩu mới"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/btdoimk"
            android:layout_width="219dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/green"
            android:drawableLeft="@drawable/baseline_note_add_24"
            android:text="Đổi mật khẩu"
            android:textSize="18sp"
            app:cornerRadius="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"/>
</LinearLayout>